<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cadastro" />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="15"
        android:text="Nome completo" />

    <EditText
        android:id="@+id/nomeEt"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewTel"
        android:layout_width="66dp"
        android:layout_height="wrap_content"
        android:ems="35"
        android:layout_marginLeft="5dp"
        android:text="Telefone" />

    <EditText
        android:id="@+id/telefoneEt"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:ems="45"
        android:layout_marginLeft="5dp"
        android:hint="Ex: 2-93456-7890"
        android:inputType="number" />

    <TextView
        android:id="@+id/textViewEm"
        android:layout_width="47dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:ems="55"
        android:text="Email" />

    <EditText
        android:id="@+id/emailEt"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:ems="65"
        android:layout_marginLeft="5dp"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingressar na lista de e-mails?" />
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/primeiroRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:text="Masculino" />

        <RadioButton
            android:id="@+id/segundoRb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Feminino" />
    </RadioGroup>
    <TextView
        android:id="@+id/textViewCid"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:ems="50"
        android:layout_marginLeft="5dp"
        android:text="Cidade" />

    <EditText
        android:id="@+id/cidadeEt"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:ems="50"
        android:layout_marginLeft="5dp"
        android:inputType="text" />

     <TextView
         android:layout_width="55dp"
         android:layout_height="wrap_content"
         android:ems="55"
         android:layout_marginLeft="12dp"
         android:text="UF"/>
     <Spinner
            android:id="@+id/opcoesUf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:entries="@array/opcoes"/>
    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="LIMPAR"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="-49dp"
        android:text="SALVAR"
        android:textAllCaps="false" />

</LinearLayout>
